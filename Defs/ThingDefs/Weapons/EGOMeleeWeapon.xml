      <texPath>EGO_Weapons/Mimicry</texPath>
      <drawSize>1.5</drawSize>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <weaponTags>
      <li>EGOWeapon</li>
      <li>Melee</li> 
      <li>MeleePiercer</li>
    </weaponTags>
    
    <recipeMaker>
